# Commons packages required by Ubuntu Server

sudo apt-get install curl -y
sudo apt-get install vi -y
sudo apt-get install vim -y
sudo apt-get install wget -y 
sudo apt-get install nmap -y

sudo apt-get update && sudo apt-get install apache2 -y
sudo apt-get install mysql-server -y
sudo mysql_secure_installation
sudo apt-get install -y php7.2-mysql php7.2-cli libapache2-mod-php7.2 graphviz aspell ghostscript clamav php7.2-pspell php7.2-curl php7.2-gd php7.2-intl php7.2-mysql php7.2-xml php7.2-
xmlrpc php7.2-ldap php7.2-zip php7.2-soap php7.2-mbstring php7.2-bcmath php7.2-common php7.2-apcu
 
 echo '<!doctype html><html><body><h1>Hello World!</h1></body></html>' | sudo tee /var/www/html/index.html
 
